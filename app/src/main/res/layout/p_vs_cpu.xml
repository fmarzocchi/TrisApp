<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerVsCpu">
    <ImageView
        android:id="@+id/shrek"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/turno"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp">

    </ImageView>
    <TextView
        android:id="@+id/giocatore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Giocatore"
        android:textSize="25sp">
    </TextView>
    <TextView
        android:id="@+id/giocatore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="Cpu"
        android:textSize="25sp">

    </TextView>

    <TextView
        android:id="@+id/punteggio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/giocatore1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textSize="25sp">

    </TextView>
    <TextView
        android:id="@+id/vittoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/turno"
        app:layout_constraintBottom_toTopOf="@id/prima_riga"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="27sp"
        android:text=""
        android:textStyle="bold"
        android:textAlignment="center"
        >

    </TextView>


    <TextView
        android:id="@+id/punteggio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/giocatore2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textSize="25sp">

    </TextView>
    <TextView
        android:id="@+id/turno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/giocatore2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/vittoria"
        android:text=""
        android:textAlignment="center"
        android:textSize="25sp">

    </TextView>


    <LinearLayout
        android:id="@+id/prima_riga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="90"
        app:layout_constraintBottom_toTopOf="@id/seconda_riga"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="153dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <Button
            android:id="@+id/uno"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="30"
            android:text=""
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >

        </Button>
        <Button
            android:id="@+id/due"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="30"
            android:text=""
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >

        </Button>
        <Button
            android:id="@+id/tre"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="30"
            android:text=""
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/seconda_riga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="90"
        app:layout_constraintBottom_toTopOf="@id/terza_riga"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <Button
            android:id="@+id/quattro"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="30"
            android:textSize="35sp"
            android:textAlignment="center"
            android:text=""
            android:layout_margin="5dp"
            >

        </Button>
        <Button
            android:id="@+id/cinque"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="30"
            android:text=""
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >

        </Button>
        <Button
            android:id="@+id/sei"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="30"
            android:text=""
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/terza_riga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="90"
        app:layout_constraintBottom_toTopOf="@id/reset"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <Button
            android:id="@+id/sette"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="30"
            android:text=""
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >

        </Button>
        <Button
            android:id="@+id/otto"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="30"
            android:text=""
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >

        </Button>
        <Button
            android:id="@+id/nove"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="30"
            android:text=""
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >

        </Button>
    </LinearLayout>
    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Rigioca"
        android:textSize="20sp"
        android:layout_marginBottom="20dp">

    </Button>








</androidx.constraintlayout.widget.ConstraintLayout>